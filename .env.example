# Application
APP_NAME="User Wallet App"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
VITE_API_URL="${APP_URL}"
L5_SWAGGER_CONST_HOST="${APP_URL}"

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_DOMAIN=
SESSION_SECURE_COOKIES=false

# Basset Configuration
BASSET_DEV_MODE=false

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=user_wallet_app
MYSQL_USER=user_wallet_user
MYSQL_PASSWORD=your_database_password
MYSQL_PORT=3307 #port on host machine

# Laravel Database Configuration (using existing MySQL values)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=${MYSQL_DATABASE}
DB_USERNAME=${MYSQL_USER}
DB_PASSWORD=${MYSQL_PASSWORD}

# Test Database Configuration
DB_TEST_DATABASE=user_wallet_app_test

# Nginx Configuration  
NGINX_PORT=8000 #port on host machine

# GitHub MCP Server Token (set this in your local .env - DO NOT commit real tokens)
GITHUB_MCP_SERVER_ACCESS_TOKEN=your_github_token_here